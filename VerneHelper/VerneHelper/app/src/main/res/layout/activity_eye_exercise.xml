<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.vernehelper.EyeExercise">

    <ImageView
        android:id="@+id/image_view_exercise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="2"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        />
    <TextView
        android:id="@+id/text_view_description_exercise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:layout_weight="3"
        android:textSize="24sp"
        />

    <Chronometer
        android:id="@+id/chronometer_time_exercise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_weight="3" />

    <Button
        android:id="@+id/button_start_exercise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:text="Start"
        android:layout_weight="3" />


</LinearLayout>
